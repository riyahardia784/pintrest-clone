<% include ./partials/header.ejs %>

<div class="w-full min-h-screen px-10 py-25">
   <h1 class="text-xl">Create new post</h1> 
   <hr class="opacity-10 mt-3">
    <div class=" " >
   <form action="/createpost" method="post" enctype="multipart/form-data">
      <div class="block bg-zinc-100 border-2 gap-10 mt-3 h-20 rounded-md w-40 sm:w-1/3 px-2 py-3 flex items-center justify-center">
         <input id="uploadform"  hidden type="file" name="postimage">
         <i class="ri-file-upload-fill" id="uploadicon"></i>
      </div>
         
         <input class="block bg-zinc-100 gap-10 mt-3 border-2 text-md w-40 sm:w-1/3 px-2 py-3" type="text" placeholder="title"  name="title">
         <textarea  class="block bg-zinc-100 gap-10 mt-3 border-2 text-md rounded-md w-40 sm:w-1/3 px-2 py-3"  value="desciption" placeholder="description" name="description"></textarea>
         <input class="block bg-red-600 hover:bg-red-700 text-white font-semibold text-md gap-10 mt-3 rounded-md w-40 sm:w-1/3 px-2 py-3" type="submit" value="create post">
   </form>
    </div>

</div>








<script>
    document.querySelector("#uploadicon").addEventListener("click",function(){
        document.querySelector("#uploadform").click();
    })
    document.querySelector("#uploadform").addEventListener("change",function(){
        document.querySelector("#uploadform").submit();
    })
</script>

