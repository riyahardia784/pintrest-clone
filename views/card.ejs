<% include ./partials/header.ejs %>

<div class="w-full min-h-screen px-15 py-25 flex bg-zinc-100 items-center justify-center">
    
    <div class="post flex flex-wrap shadow-xl bg-white   rounded-md gap-10">

        
       
         <div class=" photo  w-80 min-h-80  sm:w-100 sm:min-h-120 overflow-hidden   rounded-md " >
            
            <img class="w-full h-full object-cover" src="/images/uploads/<%= posts.image %>" alt="">
               

         </div>
         
            
         <div class=" dtels w-80 min-h-80 px-5 sm:w-100 sm:min-h-120  rounded-md" >
            <h1 class="text-3xl  sm:mt-10 font-bold"> <%= posts.title %></h1>
          
            <h3 class="text-md font-md mt-3 text-zinc-600 "><%= posts.description %>  </h3>
          
            <div class="flex flex-wrap items-center gap-2">
               <div class="profile w-15 h-15 rounded-full bg-zinc-100 mt-5 overflow-hidden">
                  <img  class="w-full h-full object-cover" src="/images/uploads/<%= posts.user.profileImage %>" alt="">
               </div>
               <h1 class="text-xl font-semibold mt-3 text-zinc-700"> <%= posts.user.username %> </h1>
            </div>
            
            <form action="/save/<%=  posts._id  %>" method="POST">
              
    
               <% if(isPostSaved){ %> 
                  <button class="mt-10 w-25 h-10 rounded-md bg-red-600 text-white font-md  hover:bg-red-700 mt-5 text-white font-semibold hover:rounded-full" type="submit">Saved</button>
              <% }else{ %>
                  <button class="mt-10 w-25 h-10 rounded-md bg-red-600 text-white font-md  hover:bg-red-700 mt-5 text-white font-semibold hover:rounded-full" type="submit">Save</button>
              <% } %>

               
            </form>
            
         </div>

         
            
    </div>
     
    
   

</div>

<% include ./partials/footer.ejs %>

